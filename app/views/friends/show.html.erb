
<div class="card">
  <div class="card-header">
    <strong>Friend Details</strong>
  </div>
  <div class="card-body">
    <h5 class="card-title">
      <%= @friend.first_name %>
      <%= @friend.last_name %>
    </h5>
  <strong>Email:</strong>
  <%= @friend.email %> |     
  <strong>Phone:</strong>
  <%= @friend.phone %>
  <br />
  <%= link_to 'Edit', edit_friend_path(@friend), class:"btn btn-secondary" %> 
  <%= link_to 'Back', friends_path, class:"btn btn-dark" %>
  </div>
</div>


